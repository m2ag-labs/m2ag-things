{
  "init": {
    "id": "urn:dev:ops:m2ag-alarm-clock",
    "title": "alarm clock module for raspialarm",
    "type": [
      "OnOffSwitch",
      "Alarm"
    ],
    "description": "Alsa for audio,  pin 12 for hepatic"
  },
  "props": {
    "alarm_enabled": {
      "name": "alarm enabled",
      "value": [
        "alarm_enabled",
        "alarm_enabled"
      ],
      "metadata": {
        "@type": "OnOffProperty",
        "title": "alarm enabled",
        "type": "boolean",
        "description": "is the alarm enabled",
        "readOnly": false
      }
    },
    "alarm_hour": {
      "name": "alarm_hour",
      "value": [
        "alarm_hour",
        "alarm_hour"
      ],
      "metadata": {
        "@type": "LevelProperty",
        "title": "alarm hour",
        "type": "number",
        "description": "0 - 23",
        "maximum": 23,
        "minimum": 0,
        "multipleOf": 1,
        "readOnly": false
      }
    },
    "alarm_minute": {
      "name": "alarm_minute",
      "value": [
        "alarm_minute",
        "alarm_minute"
      ],
      "metadata": {
        "@type": "LevelProperty",
        "title": "alarm minute",
        "type": "number",
        "description": "0 - 59",
        "maximum": 59,
        "minimum": 0,
        "multipleOf": 1,
        "readOnly": false
      }
    },
    "snooze": {
      "name": "snooze",
      "value": [
        "snooze",
        "snooze"
      ],
      "metadata": {
        "@type": "OnOffProperty",
        "title": "snooze",
        "type": "boolean",
        "description": "snooze alarm for 5 minutes",
        "readOnly": false
      }
    },
    "alarm": {
      "name": "alarm",
      "value": [
        "alarm",
        "alarm"
      ],
      "metadata": {
        "@type": "AlarmProperty",
        "title": "alarm",
        "type": "boolean",
        "description": "Status of alert buzzer",
        "readOnly": false
      }
    },
    "audio_enabled": {
      "name": "audio_enabled",
      "value": [
        "audio_enabled",
        "audio_enabled"
      ],
      "metadata": {
        "@type": "OnOffProperty",
        "title": "audio enabled",
        "type": "boolean",
        "description": "Enable audio alarm",
        "readOnly": false
      }
    },
    "hepatic_enabled": {
      "name": "hepatic_enabled",
      "value": [
        "hepatic_enabled",
        "hepatic_enabled"
      ],
      "metadata": {
        "@type": "OnOffProperty",
        "title": "hepatic enabled",
        "type": "boolean",
        "description": "Enable hepatic alarm",
        "readOnly": false
      }
    },
     "audio_style": {
      "name": "audio_style",
      "value": [
        "audio_style",
        "audio_style"
      ],
      "metadata": {
        "@type": "LevelProperty",
        "title": "audio style",
        "type": "number",
        "description": "0 = rooster, 1 = beeper",
        "maximum": 1,
        "minimum": 0,
        "readOnly": false
      }
    }
  },
  "events": {},
  "actions": {},
  "poll": {
    "members": [
      {"snooze" : 1},
      {"alarm": 1}
    ],
    "poll_interval": 1000
  }
}
